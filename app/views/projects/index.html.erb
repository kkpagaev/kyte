<p style="color: green"><%= notice %></p>

<h1>Projects</h1>

<div class="row">
  <div class="col-md-4">
    <div id="projects">
      <% @projects.each do |pro| %>
        <%= render pro %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <%= render 'project_view', locals: { project: @project } %>
  </div>
</div>
<p id="new-link">
  <%= link_to "New project", new_project_path %>
</p>
